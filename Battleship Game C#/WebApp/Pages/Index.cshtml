@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container px-4">
    <div class="col text-center p-5">
        <h1>Welcome to Battleship</h1>
    </div>
    <div class="p-4 row gx-5">
        <div class="col text-end align-bottom">
            <form method="post" asp-page-handler="StandardGame">
                <button type="submit" class="btn-lg btn-dark">Standard Game</button>
            </form>
        </div>
        <div class="col">
            <form method="post" asp-page-handler="CustomGame">
                <button type="submit" class="btn-lg btn-dark">Custom Game</button>
            </form>
        </div>
    </div>
</div>
