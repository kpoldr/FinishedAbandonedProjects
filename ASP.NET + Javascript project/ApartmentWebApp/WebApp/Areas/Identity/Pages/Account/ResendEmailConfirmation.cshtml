@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = App.Resources.WebApp.Areas.Identity.Login.EmailResend;
}

<h1>@ViewData["Title"]</h1>
<h2>@App.Resources.WebApp.Areas.Identity.Login.EnterEmail</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" aria-required="true" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">@App.Resources.WebApp.Areas.Identity.Login.Resend</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
